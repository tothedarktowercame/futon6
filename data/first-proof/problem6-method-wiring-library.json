    "nodes": [
      {
        "id": "rp-q",
        "node_type": "question",
        "body_text": "Does there exist universal c0>0 such that for every weighted graph G and epsilon in (0,1), some S subseteq V satisfies |S|>=c0*epsilon*n and L_{G[S]}<=epsilon L (induced, zero-padded, no reweighting)?"
      },
      {
        "id": "rp-a1",
        "node_type": "answer",
        "body_text": "Equivalent spectral form: ||L^{+/2} L_{G[S]} L^{+/2}|| <= epsilon."
      },
      {
        "id": "rp-a2",
        "node_type": "answer",
        "body_text": "Cardinality target: |S| >= c0*epsilon*n with universal c0."
      },
      {
        "id": "rp-c1",
        "node_type": "comment",
        "body_text": "Edge sparsification with reweighting does not by itself imply induced-vertex selection."
      },
      {
        "id": "rp-a3",
        "node_type": "answer",
        "body_text": "Reduced bridge problem: find theorem-level vertex-selection mechanism proving the universal constant."
      }
    ],
